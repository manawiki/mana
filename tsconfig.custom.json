{
   "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
         "~/*": ["./app/*"],
         "payload/generated-types": ["./app/db/payload-custom-types.ts"]
      }
   },
   "include": ["custom.server.ts", "payload.custom.config.ts"],
   "ts-node": {
      "swc": true,
      "transpileOnly": true
   }
}
